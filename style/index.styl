@font-face {
  font-family: 'ananda';
  src: url('../fonts/ananda.ttf') format('ttf');
}

body
	font-size 14px
	font-family ananda
	display grid
	grid-template-columns 1fr
a
	text-decoration none
	color #c4c4c4
header
	color #f4f4f4
	background-color: #222222
	margin-bottom 5px

main
	figure
		margin 0
		text-align center
		width 100%
		img 
			width 100%
#mainHeader
	position fixed
	top 0
	width 100%
	display flex 
	flex-direction row
	justify-content space-between

#headerTitle
	display inline-block
	h3
	h4
		display inline-block
		margin-right 10px

#slide
	position fixed
	top 0
	left -130px
	list-style none
	padding 0
	li
		margin 10px
		border-bottom 1px solid #444444
		&:hover
			border-left 1px solid blue		
main
	background-color #57C6D4
#mainImage
	margin-top 40px
	width 100%
	height auto
	
#profilePhoto
	width 90px
	height auto
	border-radius 50px
	margin auto

section
	background-color #f4f4f4
	margin 5px
	font-size 1.4rem
	box-shadow 0 4px 8px 0 rgba(0,0,0,0.2);
	border-radius 5px
	

	header
		padding 5px	
		display flex
		justify-content space-between
		h4
			display inline
			margin 0
		i
			vertical-align middle
			text-align right	

.eduList
	font-size 0.9rem
	list-style none
	text-align center
	padding-left 0
	
#skills
	text-align center
	ul
		list-style none
		display inline-block
		font-size 0.9rem
		line-height 1.6
		
		li
			text-align left
			&:nth-child(odd)
				color #828282
footer
	text-align center
	background-color #222222
	#arrow
		display block
		transition 5s
		width 100%
		margin-bottom 10px
		background linear-gradient(#444444, #222222 )
		i 
			padding-top 10px
			border-radius 50px
			background linear-gradient(#444444, #222222 )
		